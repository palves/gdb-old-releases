#### Start of system configuration section. ####

srcdir = @srcdir@
VPATH = @srcdir@:$(common)

common = $(srcdir)/../common

CC = @CC@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

LN	= ln
RM	= rm -f
TAR	= tar
MKDIR	= mkdir
MAKEINFO = makeinfo
COMPRESS= compress

# Things you might add to DEFS:
# -DHAVE_GETCWD		If your system has the getcwd () call (instead
#			of getwd ();
# -DHAVE_SIGSETMASK	If your system has sigsetmask () (as in BSD).
DEFS = @DEFS@
LIBS = @LIBS@
LOADLIBES = $(LIBS)

SHELL = /bin/sh

CFLAGS = -g
LDFLAGS = -g

TEXIDIR=$(srcdir)/..
SET_TEXINPUTS = TEXINPUTS=$(srcdir):$(TEXIDIR):$$TEXINPUTS

prefix = /usr/local
exec_prefix = $(prefix)
bindir = $(exec_prefix)/bin
# Prefix for each installed program, normally empty or `g'.
binprefix = 
libdir = $(prefix)/lib
# Prefix for each installed man page, normally empty or `g'.
manprefix = 
mandir = $(prefix)/man/man1
manext = 1
infodir = $(prefix)/info

LIBIBERTY = `if [ -f ../../libiberty/libiberty.a ] ; then echo ../../libiberty/libiberty.a ; else echo -liberty ; fi`

#### End of system configuration section. ####

SRCS =  makeinfo.c 
OBJS =  makeinfo.o 

PROGS = makeinfo

all: $(PROGS) 

.PHONY: info
info: makeinfo.info

dvi: makeinfo.dvi

sub-all: all

.c.o:
	$(CC) -c $(CPPFLAGS) -I. -I$(srcdir) -I$(srcdir)/../../include $(DEFS) $(CFLAGS) $<

makeinfo: $(OBJS)
	$(CC) $(LDFLAGS) $(CFLAGS) $(OBJS) -o $@ $(LIBIBERTY)

makeinfo.o: makeinfo.c 

makeinfo.info: makeinfo $(srcdir)/makeinfo.texi $(srcdir)/docmakeinfo.texi
	$(MAKEINFO) -I$(srcdir) --no-split $(srcdir)/makeinfo.texi -o makeinfo.info

makeinfo.dvi : $(srcdir)/makeinfo.texi $(srcdir)/docmakeinfo.texi
	$(SET_TEXINPUTS) $(TEXI2DVI) $(srcdir)/makeinfo.texi

install: install-man
	for f in $(PROGS); do $(INSTALL_PROGRAM) $$f $(bindir)/$(binprefix)$$f; done

install-man: makeinfo.man
	$(INSTALL_DATA) $(srcdir)/makeinfo.man $(mandir)/makeinfo.$(manext)

install-info: 
	for i in *.info* ; do \
		$(INSTALL_DATA) $$i $(infodir)/$$i ; \
	done

uninstall:
	for f in $(PROGS); do rm -f $(bindir)/$(binprefix)$$f; done
	rm -f $(infodir)/makeinfo.info

TAGS: $(SRCS)
	etags $(SRCS)

clean:
	rm -f *.o a.out core $(PROGS)

mostlyclean: clean

distclean: clean
	rm -f Makefile config.status

realclean: distclean
	rm -f TAGS

Makefile: Makefile.in ../config.status
	cd ..; sh config.status

# Prevent GNU make v3 from overflowing arg limit on SysV.
.NOEXPORT:
