	;;
sun386 | roadrunner | sun386i)
	cpu=i386
	vendor=sun
	os=sunos
	;;
sun4)
	cpu=sparc
	vendor=sun
	os=sunos4
	;;
sun4os3)
	cpu=sparc
	vendor=sun
